<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AppUI.Order.OrderPickupDetail">

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background_color">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="PICKUP ADDRESS"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/orange">
            </TextView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_color"
                                android:gravity="center"
                                android:text="Enter detailed pickup address.">

                            </TextView>
                            <soup.neumorphism.NeumorphCardView
                                android:layout_width="match_parent"
                                android:layout_height="256dp"
                                app:neumorph_shapeType="pressed">

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp">

                                    <EditText
                                        android:id="@+id/pickup_Address"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="left"
                                        android:hint="NOTE - Skip this section, if you want us to get your items from any random nearby store.\n\n\n\nGive some details about the pickup address.\nEx.\nany nearby landmark,\nshop name, street name, chowk name\nAny detail that will be helpful for finding pickup location.\n\nIf you know the exact pickup location, please add a location share link.\n"
                                        android:inputType="textMultiLine"
                                        android:textSize="14sp"
                                        android:textStyle="bold">

                                    </EditText>
                                </ScrollView>
                            </soup.neumorphism.NeumorphCardView>
                        </LinearLayout>
                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:neumorph_shapeType="flat">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:text="Enter pickup location share link."
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_color"
                                android:gravity="center">
                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/pickup_mapButton"
                                    android:layout_width="36dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    app:srcCompat="@drawable/baseline_near_me_24">

                                </ImageView>
                                <soup.neumorphism.NeumorphCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="8dp"
                                    app:neumorph_shapeType="pressed">

                                    <EditText
                                        android:id="@+id/pickup_maplink"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="bottom"
                                        android:layout_marginHorizontal="8dp"
                                        android:gravity="bottom"
                                        android:hint=" Touch arrow button to open map."
                                        android:inputType="text"
                                        android:textSize="14sp"
                                        android:textStyle="bold">

                                    </EditText>

                                </soup.neumorphism.NeumorphCardView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="How to copy location share link ?"
                                android:textColor="@color/orange"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold"
                                android:gravity="center">
                            </TextView>
                        </LinearLayout>

                    </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:id="@+id/pickup_log"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:textStyle="bold">

                    </TextView>

                    <soup.neumorphism.NeumorphButton
                        android:id="@+id/pickup_next_button"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="NEXT - DELIVERY LOCATION DETAILS"
                        android:textColor="@color/background_color"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:neumorph_backgroundColor="@color/orange"></soup.neumorphism.NeumorphButton>

                    <soup.neumorphism.NeumorphButton
                        android:id="@+id/pickup_back_button"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="BACK - DASHBOARD"
                        android:textColor="@color/background_color"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:neumorph_backgroundColor="@color/orange"></soup.neumorphism.NeumorphButton>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>
</FrameLayout>